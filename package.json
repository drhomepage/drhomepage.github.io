{
  "name": "dr-decap",
  "version": "0.0.1",
  "description": "digital rapids Website using Decap CMS, 11ty, Lit.js and TailwindCSS",
  "main": "index.webc",
  "type": "module",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "watch": "rm -rf _site && npm run watch:11ty && npm run watch:tailwind",
    "watch:11ty": "npx @11ty/eleventy --serve",
    "watch:tailwind": "npx @tailwindcss/cli -i ./src/style.css -o ./assets/style.css --watch",
    "build": "rm -rf _site/* && touch _site/.keep && npm run build:tailwind && npm run build:11ty",
    "build:11ty": "npx @11ty/eleventy",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/style.css -o ./assets/style.css --minify"
  },
  "dependencies": {
    "@11ty/eleventy": "^v3.0.0",
    "@11ty/eleventy-img": "^6.0.1",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@lit/context": "^1.1.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-virtual": "^3.0.2",
    "@tailwindcss/cli": "^4.1.3",
    "eleventy-plugin-i18n": "^0.1.3",
    "lit": "^3.2.1",
    "rollup": "^4.25.0",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
